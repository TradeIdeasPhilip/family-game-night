{
  // compileOnSave comes from https://github.com/microsoft/vscode/issues/31294
  // I never got that feature to work.  ðŸ˜¥
    "compileOnSave": true,
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "sourceMap": true,
      "lib": ["ES2019", "DOM"],
      "allowUnusedLabels": false,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitUseStrict": false,
      "noStrictGenericChecks": false,
      "strict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "suppressExcessPropertyErrors": false,
      "suppressImplicitAnyIndexErrors": false,
      "removeComments": true,
    },
  }