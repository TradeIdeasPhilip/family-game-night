{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: build - tsconfig.json",
			"runOptions": {
				// Note:  Originally the deno server was going to take
				// care of th automatic compiles, but I'm having trouble
				// with that today.
				
				// Make sure that automatic tasks are enabled!
				// https://stackoverflow.com/a/53755091/971955
				"runOn": "folderOpen"
			  }
		}
	]
}